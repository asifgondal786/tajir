# Backend dev defaults
DEBUG=true
CORS_ALLOW_LOCALHOST=true

# Optional: allow dev user id header (x-user-id)
# Secure default is disabled unless explicitly enabled.
# ALLOW_DEV_USER_ID=true
# DEV_USER_LOCALHOST_ONLY=true
# DEV_AUTH_SHARED_SECRET=choose-a-strong-local-dev-secret

# Host and transport hardening
# ALLOWED_HOSTS=localhost,127.0.0.1,api.your-domain.com
# ENABLE_HSTS=true
# ENABLE_CSP=true
# MAX_REQUEST_BODY_BYTES=1048576

# Optional: tighten or expand CORS
# CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
# CORS_ORIGIN_REGEX=^http://(localhost|127\.0\.0\.1)(:\d+)?$

# Notification deep-study gate
# NOTIFICATIONS_REQUIRE_DEEP_STUDY=true
# NOTIFICATIONS_DEEP_STUDY_MIN_CONFIDENCE=0.45
# NOTIFICATIONS_AUTONOMOUS_MIN_COVERAGE=0.35
# NOTIFICATIONS_AUTONOMOUS_HIGH_RISK_PAUSE=true

# Autonomous trade execution safety
# REQUIRE_BROKER_FAIL_SAFE=true
# REQUIRE_EXPLAIN_BEFORE_EXECUTE=true
# EXPLAIN_TOKEN_TTL_SECONDS=300
# ALLOW_DEV_PROBATION_BYPASS=true

# Broker bridge (Forex.com)
# FOREX_COM_LIVE_EXECUTION=false
# FOREX_COM_DEFAULT_ACCOUNT_MODE=demo
# FOREX_COM_BASE_URL=https://api.your-forex-broker.example
# FOREX_COM_ORDER_PATH=/v1/orders
# FOREX_COM_ORDER_ENDPOINT=
# FOREX_COM_AUTH_MODE=bearer
# FOREX_COM_API_KEY=...
# FOREX_COM_API_SECRET=...
# FOREX_COM_SYMBOL_FORMAT=slash
# FOREX_COM_SIDE_FORMAT=lower
# FOREX_COM_ORDER_TYPE=market
# FOREX_COM_TIME_IN_FORCE=
# FOREX_COM_TENANT_ID=
# FOREX_COM_CLIENT_ID=
# FOREX_COM_HTTP_TIMEOUT_SECONDS=12

# Credential Vault (required for encrypted broker credential storage)
# Generate Fernet key once:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# CREDENTIAL_VAULT_MASTER_KEY=your_fernet_key_here
# Optional deterministic fallback:
# CREDENTIAL_VAULT_MASTER_PASSPHRASE=your-long-secret-passphrase

# Subscription rollout controls
# SUBSCRIPTION_PAYWALL_ENABLED=false
# SUBSCRIPTION_PREMIUM_PRICE_USD=10
# SUBSCRIPTION_ALLOW_DEV_BYPASS=true
# SUBSCRIPTION_ALLOW_SELF_SERVICE_MANAGEMENT=true

# Notification channels (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=example@gmail.com
# SMTP_PASS=app-password
# SMTP_FROM=example@gmail.com
# SMTP_TLS=true

# Telegram connector
# TELEGRAM_BOT_TOKEN=123456:ABCDEF
# TELEGRAM_DEFAULT_CHAT_ID=123456789

# Discord connector
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# X connector (recommended: your own integration webhook that posts via X API)
# X_WEBHOOK_URL=https://your-x-integration.example.com/post

# Generic webhook channel fallback
# NOTIFICATION_WEBHOOK_URL=https://your-webhook.example.com/notify

# SMS/WhatsApp connectors (webhook adapters to your provider, e.g. Twilio)
# SMS_WEBHOOK_URL=https://your-sms-gateway.example.com/send
# WHATSAPP_WEBHOOK_URL=https://your-whatsapp-gateway.example.com/send

# Firebase (Railway)
# FIREBASE_PROJECT_ID=forexcompanion-e5a28
# FIREBASE_SERVICE_ACCOUNT_JSON_B64=...
